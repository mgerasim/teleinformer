<% provide(:title, "Авторизация") %>


<div class="row">
    <div class="col-md-3">
    </div>
    
    <div class="col-md-6">

<%= form_for(:session, url: login_path, :html => {class: 'form-signin'}) do |f| %>
	<div class="text-center mb-4">
	    <img class="mb-4" src="/logo.png" alt="Криптообмен" style="width: 50%">
	
	</div>
	<h1 class="h3 mb-3 font-weight-normal text-center">Вход администратора</h1>

	
        <div class="form-group">
    	    <label for="inputPassword" class="sr-only">Пароль</label>
	    <%= f.password_field :password, class: 'form-control' %>
        </div>

	<div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Вход</button>
	</div>
	<p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
<% end %>


</div>

<div class="col-md-3">
</div>

</div>